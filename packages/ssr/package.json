{
  "name": "@times-components/ssr",
  "main": "src",
  "version": "1.4.3",
  "scripts": {
    "bundle:dev": "yarn cleanup-dist && webpack --config=webpack.config.js",
    "bundle:prod": "yarn cleanup-dist && NODE_ENV=production webpack --config=webpack.config.js -p",
    "bundle:profile": "yarn cleanup-dist && NODE_ENV=production webpack --config=webpack.config.js --profile --json > dist/stats.json",
    "cleanup:servers": "pkill node",
    "cleanup-dist": "rm -rf dist",
    "depcheck": "depcheck --ignores='cypress, depcheck,eslint,graphql,prettier,react-art,wait-on,webpack*' --skip-missing",
    "fmt": "eslint . --fix && prettier --write '**/*.*'",
    "lint": "eslint . && yarn prettier:diff && yarn depcheck",
    "prepublishOnly": "yarn bundle:prod",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "run:test": "yarn start:tpamock & yarn start:test & cypress run",
    "start": "webpack --config=src/standalone-renderer/webpack.config.js && node src/standalone-renderer/app.js",
    "start:test": "GRAPHQL_ENDPOINT=http://localhost:4000/graphql yarn start & wait-on http://localhost:3000",
    "start:tpamock": "node ./mock-server & wait-on http://localhost:4000",
    "test:integration": "GRAPHQL_ENDPOINT=http://localhost:4000/graphql yarn bundle:dev && yarn run:test && yarn cleanup:servers"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web",
    "ssr",
    "component"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "devDependencies": {
    "@times-components/eslint-config-thetimes": "0.8.5",
    "@times-components/provider-test-tools": "1.9.0",
    "apollo-server": "2.1.0",
    "cypress": "3.1.0",
    "depcheck": "0.6.9",
    "eslint": "4.19.1",
    "eslint-plugin-cypress": "2.0.1",
    "express": "4.16.3",
    "graphql": "0.13.2",
    "prettier": "1.14.3",
    "wait-on": "3.1.0",
    "webpack": "4.6.0",
    "webpack-cli": "2.1.4"
  },
  "dependencies": {
    "@times-components/article": "6.1.0",
    "@times-components/author-profile": "5.0.4",
    "@times-components/context": "0.5.4",
    "@times-components/provider": "1.7.0",
    "@times-components/schema": "0.1.11",
    "@times-components/styleguide": "3.7.2",
    "@times-components/tealium": "1.6.9",
    "@times-components/topic": "4.0.4",
    "apollo-cache-inmemory": "1.1.10",
    "apollo-client": "2.3.7",
    "apollo-link": "1.2.3",
    "apollo-link-error": "^1.0.7",
    "apollo-link-http": "1.5.3",
    "node-fetch": "2.2.0",
    "react": "16.5.2",
    "react-apollo": "2.1.4",
    "react-art": "16.5.2",
    "react-dom": "16.5.2",
    "react-native": "0.55.4",
    "react-native-web": "0.9.0",
    "shrink-ray": "0.1.3",
    "styled-components": "3.4.0",
    "unfetch": "^3.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
