{
  "name": "@times-components/ssr",
  "main": "src",
  "version": "1.6.5",
  "scripts": {
    "bundle:dev": "yarn cleanup-dist && webpack --config=webpack.config.js",
    "bundle:prod": "yarn cleanup-dist && NODE_ENV=production webpack --config=webpack.config.js -p",
    "bundle:profile": "yarn cleanup-dist && NODE_ENV=production webpack --config=webpack.config.js --profile --json > dist/stats.json",
    "cleanup-dist": "rm -rf dist",
    "depcheck": "depcheck --ignores='cypress, depcheck,eslint,graphql,prettier,react-art,wait-on,webpack*' --skip-missing",
    "fmt": "eslint . --fix && prettier --write '**/*.*'",
    "lint": "eslint . && yarn prettier:diff && yarn depcheck",
    "prepublishOnly": "yarn bundle:prod",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "start": "webpack --config=src/standalone-renderer/webpack.config.js && node src/standalone-renderer/app.js",
    "start:testservers": "node ./mock-server & wait-on tcp:4000 && GRAPHQL_ENDPOINT=http://localhost:4000/graphql yarn start & wait-on tcp:3000",
    "stop:testservers": "kill $(lsof -t -i:3000,4000)",
    "cypress:debug": "DEBUG=cypress:* cypress open",
    "test:integration": "yarn bundle:prod && yarn start:testservers && cypress run; exitCode=$?; yarn stop:testservers; exit $exitCode",
    "test:integration:dev": "yarn bundle:dev && yarn start:testservers && cypress run --headed; exitCode=$?; yarn stop:testservers; exit $exitCode",
    "test:integration:debug": "yarn bundle:dev && yarn start:testservers && DEBUG=cypress:* cypress run --headed; exitCode=$?; yarn stop:testservers; exit $exitCode"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web",
    "ssr",
    "component"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "devDependencies": {
    "@times-components/eslint-config-thetimes": "0.8.8",
    "@times-components/mock-tpa-server": "0.1.15",
    "cypress": "3.1.0",
    "depcheck": "0.6.9",
    "eslint": "5.9.0",
    "eslint-plugin-cypress": "2.0.1",
    "express": "4.16.3",
    "graphql": "0.13.2",
    "prettier": "1.14.3",
    "wait-on": "3.1.0",
    "webpack": "4.6.0",
    "webpack-cli": "2.1.4"
  },
  "dependencies": {
    "@times-components/article": "6.4.5",
    "@times-components/author-profile": "5.1.10",
    "@times-components/context": "0.5.13",
    "@times-components/provider": "1.8.4",
    "@times-components/schema": "0.1.15",
    "@times-components/styleguide": "3.9.0",
    "@times-components/tealium": "1.6.12",
    "@times-components/topic": "4.1.2",
    "apollo-cache-inmemory": "1.1.10",
    "apollo-client": "2.3.7",
    "apollo-link": "1.2.3",
    "apollo-link-error": "^1.0.7",
    "apollo-link-http": "1.5.3",
    "node-fetch": "2.2.0",
    "react": "16.5.2",
    "react-apollo": "2.1.4",
    "react-art": "16.5.2",
    "react-dom": "16.5.2",
    "react-native": "0.55.4",
    "react-native-web": "0.9.0",
    "shrink-ray": "0.1.3",
    "styled-components": "3.4.0",
    "unfetch": "^3.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
