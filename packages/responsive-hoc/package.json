    "babel-loader": "7.0.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.5",
    "babel-preset-flow": "6.23.0",
    "babel-preset-react-native": "1.9.2",
    "flow-bin": "0.42.0",
    "jest": "21.2.1",
    "react": "16.0.0",
    "react-dom": "16.0.0",
