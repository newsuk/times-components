{
  "name": "@times-components/webpack-configurator",
  "version": "0.0.1",
  "description": "webpack-configurator for times-components",
  "main": "dist",
  "dev": "src",
  "scripts": {
    "fmt": "prettier --write '**/*.*'",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "lint": "eslint . && yarn prettier:diff",
    "prepublishOnly": "yarn transpile",
    "test": "jest --coverage",
    "cleanup-dist": "rm -rf dist",
    "transpile": "yarn cleanup-dist && babel src -d dist"
  },
  "jest": {
    "preset": "react-native",
    "rootDir": "../../",
    "coverageDirectory": "<rootDir>/packages/webpack-configurator/coverage/",
    "transformIgnorePatterns": [
      "node_modules"
    ],
    "testMatch": [
      "<rootDir>/packages/webpack-configurator/__tests__/**.test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "devDependencies": {
    "@times-components/eslint-config-thetimes": "0.5.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.2",
    "eslint": "4.9.0",
    "jest": "21.2.1",
    "prettier": "1.8.2"
  },
  "peerDependencies": {
    "babel-loader": "7.1.4",
    "babel-plugin-react-native-web": ">=0.6.1",
    "react-native-web": ">=0.3",
    "webpack": ">=4.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "fs-extra": "6.0.1"
  }
}
