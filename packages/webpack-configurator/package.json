{
  "name": "@times-components/webpack-configurator",
  "version": "2.0.14",
  "description": "webpack-configurator for times-components",
  "main": "dist",
  "dev": "src",
  "scripts": {
    "fmt": "eslint . --fix && prettier --write '**/*.*'",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "lint": "eslint . && yarn prettier:diff && jest-lint",
    "prepublishOnly": "yarn transpile",
    "test": "jest",
    "cleanup-dist": "rm -rf dist",
    "transpile": "yarn cleanup-dist && babel src -d dist"
  },
  "jest": {
    "preset": "react-native",
    "rootDir": "../../",
    "coverageDirectory": "<rootDir>/packages/webpack-configurator/coverage/",
    "transformIgnorePatterns": [
      "node_modules"
    ],
    "testMatch": [
      "<rootDir>/packages/webpack-configurator/__tests__/**.test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-transform-modules-commonjs": "7.1.0",
    "@thetimes/jest-lint": "*",
    "@times-components/eslint-config-thetimes": "0.8.8",
    
    "babel-jest": "^23.4.2",
    "babel-loader": "8.0.4",
    "babel-plugin-react-native-web": "0.9.0",
    "eslint": "5.9.0",
    "jest": "23.6.0",
    "prettier": "1.14.3"
  },
  "peerDependencies": {
    "react-native-web": "0.9.0",
    "webpack": ">=4.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "fs-extra": "7.0.0"
  }
}
