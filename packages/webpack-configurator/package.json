{
  "name": "@times-components/webpack-configurator",
  "version": "0.0.1",
  "description": "webpack-configurator for times-components",
  "main": "dist",
  "dev": "src",
  "scripts": {
    "fmt": "prettier --write '**/*.*'",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "lint": "eslint . && yarn prettier:diff",
    "prepublishOnly": "yarn transpile && yarn bundle",
    "test": "jest --coverage",
    "cleanup-dist": "rm -rf dist",
    "transpile": "yarn cleanup-dist && babel src -d dist",
    "bundle": "webpack"
  },
  "jest": {
    "preset": "react-native",
    "rootDir": "../../",
    "coverageDirectory": "<rootDir>/packages/webpack-configurator/coverage/",
    "transformIgnorePatterns": [
      "node_modules"
    ],
    "testMatch": [
      "<rootDir>/packages/webpack-configurator/__tests__/**.test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "peerDependencies": {
    "webpack": ">=4.2.0",
    "react-native-web": ">=0.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
