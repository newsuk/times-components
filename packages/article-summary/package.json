{
  "name": "@times-components/article-summary",
  "version": "0.8.7",
  "main": "article-summary",
  "scripts": {
    "flow": "node_modules/flow-bin/cli.js",
    "test:watch": "npm run test:native -- --bail --verbose --watchAll",
    "test:native": "jest --config='./jest.config.json'",
    "test:web": "jest --config='./jest.config.web.json'",
    "test": "npm run test:native -- --ci --bail && npm run test:web -- --ci --bail --coverage",
    "fmt": "prettier --write '**/*.+(js|json|md)'",
    "prettier:diff": "prettier --list-different '**/*.+(js|json|md)'",
    "lint": "eslint . && npm run prettier:diff"
  },
  "jest": {
    "preset": "react-native",
    "rootDir": "../../",
    "transformIgnorePatterns": [
      "node_modules/(?!@times-components)/"
    ],
    "testMatch": [
      "<rootDir>/packages/article-summary/__tests__/**.test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web",
    "article-summary",
    "component"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-core": "6.24.1",
    "babel-loader": "7.0.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.5",
    "babel-preset-flow": "6.23.0",
    "babel-preset-react-native": "1.9.2",
    "eslint": "4.9.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-prettier": "2.6.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-react": "7.4.0",
    "flow-bin": "0.42.0",
    "jest": "21.2.1",
    "prettier": "1.8.2",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-native": "0.50.1",
    "react-test-renderer": "16.0.0",
    "webpack": "3.3.0"
  },
  "dependencies": {
    "@times-components/date-publication": "0.4.6",
    "@times-components/markup": "0.12.7",
    "date-fns": "1.28.5",
    "prop-types": "15.6.0",
    "react-native-web": "0.1.7",
    "react-style-proptype": "3.1.0"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16",
    "react-native": ">=0.50"
  },
  "publishConfig": {
    "access": "public"
  }
}
