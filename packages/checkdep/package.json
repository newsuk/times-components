{
  "name": "@times-components/checkdep",
  "version": "0.0.1",
  "description": "dependency analyzer and fixer",
  "main": "checkdep",
  "scripts": {
    "fmt": "prettier --write '**/*.*'",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "lint": "eslint . && npm run prettier:diff",
    "test": "yarn test:android --ci --bail --coverage && yarn test:ios --ci --bail --coverage && yarn test:web --ci --bail --coverage",
    "test:android": "jest --config='./__tests__/android/jest.config.js'",
    "test:ios": "jest --config='./__tests__/ios/jest.config.js'",
    "test:web": "jest --config='./__tests__/web/jest.config.js'"
  },
  "jest": {
    "preset": "react-native",
    "rootDir": "../../",
    "testEnvironment": "jsdom",
    "coverageDirectory": "<rootDir>/packages/checkdep/coverage/",
    "collectCoverageFrom": [
      "**/packages/provider/*.js",
      "!**/packages/provider/*stories.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|react-apollo-temp|@times-components)/)"
    ],
    "testMatch": [
      "<rootDir>/packages/provider/__tests__/**.test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "mono",
    "repo",
    "lerna",
    "dependency",
    "analyzer",
    "linter"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "devDependencies": {
    "eslint": "4.9.0",
    "jest": "21.2.1",
    "prettier": "1.8.2"
  },
  "dependencies": {
    "babel-polyfill": "6.26.0",
    "glob": "^7.1.2",
    "semver": "^5.5.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
