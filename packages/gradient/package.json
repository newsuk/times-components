{
  "name": "@times-components/gradient",
  "version": "0.3.8",
  "description": "Renders a gradient background",
  "main": "gradient",
  "scripts": {
    "flow": "node_modules/flow-bin/cli.js",
    "test:watch": "jest --bail --verbose --watchAll",
    "test": "jest --bail --ci --coverage",
    "fmt": "prettier --write '**/*.*'",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "lint": "eslint . && yarn prettier:diff",
    "dextrose-stories": "dextrose-stories",
    "dextrose-clean": "dextrose-clean"
  },
  "jest": {
    "preset": "react-native",
    "rootDir": "../../",
    "coverageDirectory": "<rootDir>/packages/gradient/coverage/",
    "transformIgnorePatterns": [
      "node_modules/(?!@times-components)/"
    ],
    "testMatch": [
      "<rootDir>/packages/gradient/__tests__/*.test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web",
    "gradient",
    "component"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "devDependencies": {
    "@storybook/react-native": "3.2.18",
    "@times-components/brightcove-video": "1.10.2",
    "@times-components/eslint-config-thetimes": "0.1.0",
    "babel-cli": "6.24.1",
    "babel-core": "6.24.1",
    "babel-jest": "21.2.0",
    "babel-loader": "7.1.2",
    "babel-plugin-transform-react-remove-prop-types": "0.4.5",
    "babel-preset-flow": "6.23.0",
    "babel-preset-react-native": "1.9.2",
    "dextrose": "1.2.14",
    "eslint": "4.9.0",
    "flow-bin": "0.42.0",
    "jest": "21.2.1",
    "prettier": "1.8.2",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-native": "0.50.1",
    "react-native-linear-gradient": "2.3.0",
    "react-test-renderer": "16.2.0",
    "webpack": "3.3.0"
  },
  "dependencies": {
    "prop-types": "15.6.0"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16",
    "react-native": ">=0.50",
    "react-native-linear-gradient": ">=2.3",
    "react-native-web": ">=0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
