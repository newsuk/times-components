{
  "name": "@times-components/test-utils",
  "version": "2.0.3",
  "description": "Test helpers for Times Components",
  "main": "dist/index",
  "dev": "src/index",
  "scripts": {
    "fmt": "prettier --write '**/*.*'",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "depcheck": "depcheck --ignores='@thetimes/jest-lint,babel-*,depcheck,eslint,jest,prettier,webpack*' --ignore-bin-package=false --skip-missing",
    "lint": "eslint . && yarn prettier:diff && yarn depcheck && jest-lint",
    "test": "jest",
    "prepublishOnly": "yarn transpile && yarn bundle",
    "cleanup-dist": "rm -rf dist",
    "transpile": "yarn cleanup-dist && babel src -d dist",
    "bundle": "NODE_ENV=production webpack -p"
  },
  "jest": {
    "testEnvironment": "node",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "test helpers",
    "test-utils",
    "component"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@thetimes/jest-lint": "*",
    "@times-components/eslint-config-thetimes": "0.8.8",
    "@times-components/webpack-configurator": "2.0.14",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "depcheck": "0.6.9",
    "enzyme": "3.6.0",
    "enzyme-adapter-react-16": "1.5.0",
    "eslint": "5.9.0",
    "jest": "23.3.0",
    "metro-react-native-babel-preset": "0.49.2",
    "prettier": "1.14.3",
    "react": "16.5.2",
    "react-native": "0.55.4",
    "webpack": "4.6.0",
    "webpack-cli": "2.1.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
