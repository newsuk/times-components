{
  "name": "@times-components/video",
  "version": "4.3.8",
  "main": "dist/video",
  "dev": "src/video",
  "scripts": {
    "fmt": "eslint . --fix && prettier --write '**/*.*'",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "depcheck": "depcheck --ignores='@thetimes/jest-lint,babel-*,depcheck,eslint,jest,prettier,react-art,webpack*' --ignore-bin-package=false --skip-missing",
    "lint": "eslint . && yarn prettier:diff && yarn depcheck && jest-lint",
    "test:ios": "jest --config='./__tests__/ios/jest.config.js'",
    "test:android": "jest --config='./__tests__/android/jest.config.js'",
    "test:web": "jest --config='./__tests__/web/jest.config.js'",
    "test:all": "yarn test:ios --coverage && yarn test:android --coverage && yarn test:web --coverage",
    "prepublishOnly": "yarn transpile && yarn bundle",
    "cleanup-dist": "rm -rf dist",
    "transpile": "yarn cleanup-dist && babel src -d dist",
    "bundle": "NODE_ENV=production webpack -p"
  },
  "jest": {
    "preset": "react-native",
    "rootDir": "../..",
    "coverageDirectory": "<rootDir>/packages/video/coverage/",
    "testEnvironment": "jsdom",
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@times-components)/)"
    ],
    "testMatch": [
      "<rootDir>/packages/video/__tests__/*.test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web",
    "video",
    "brightcove",
    "component"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "devDependencies": {
    "@thetimes/jest-lint": "*",
    "@times-components/eslint-config-thetimes": "0.8.9",
    "@times-components/jest-configurator": "2.2.2",
    "@times-components/jest-serializer": "3.2.0",
    "@times-components/storybook": "3.3.4",
    "@times-components/test-utils": "2.1.9",
    "babel-core": "6.26.0",
    "babel-loader": "7.1.4",
    "babel-plugin-add-react-displayname": "0.0.5",
    "babel-plugin-styled-components": "1.5.1",
    "babel-preset-react-native": "4.0.0",
    "depcheck": "0.6.9",
    "enzyme": "3.6.0",
    "eslint": "5.9.0",
    "jest": "23.3.0",
    "prettier": "1.14.3",
    "react": "16.5.2",
    "react-art": "16.5.2",
    "react-dom": "16.5.2",
    "react-native": "0.55.4",
    "react-native-web": "0.9.0",
    "react-test-renderer": "16.5.2",
    "webpack": "4.6.0",
    "webpack-cli": "2.1.4"
  },
  "dependencies": {
    "@times-components/error-view": "2.2.8",
    "@times-components/gradient": "2.3.8",
    "@times-components/image": "4.6.4",
    "@times-components/styleguide": "3.18.0",
    "@times-components/svgs": "2.3.2",
    "prop-types": "15.6.2",
    "styled-components": "3.4.0"
  },
  "peerDependencies": {
    "react": ">=16.5",
    "react-dom": ">=16.5",
    "react-native": ">=0.55",
    "react-native-web": "0.9.0"
  },
  "_timesComponentsCliVariables": {
    "component": "Video",
    "packageDescription": "Video component",
    "packageName": "video"
  },
  "publishConfig": {
    "access": "public"
  }
}
