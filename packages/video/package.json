{
  "name": "@times-components/video",
  "version": "3.0.2",
  "main": "dist/video",
  "dev": "src/video",
  "scripts": {
    "fmt": "eslint . --fix && prettier --write '**/*.*'",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "lint": "eslint . && yarn prettier:diff",
    "test:ios": "jest --config='./__tests__/ios/jest.config.js'",
    "test:android": "jest --config='./__tests__/android/jest.config.js'",
    "test:web": "jest --config='./__tests__/web/jest.config.js'",
    "test:all": "yarn test:ios --coverage & yarn test:android --coverage & yarn test:web --coverage",
    "prepublishOnly": "yarn transpile && yarn bundle",
    "cleanup-dist": "rm -rf dist",
    "transpile": "yarn cleanup-dist && babel src -d dist",
    "bundle": "NODE_ENV=production webpack -p"
  },
  "jest": {
    "preset": "react-native",
    "rootDir": "../..",
    "coverageDirectory": "<rootDir>/packages/video/coverage/",
    "testEnvironment": "jsdom",
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@times-components)/)"
    ],
    "testMatch": [
      "<rootDir>/packages/video/__tests__/*.test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web",
    "video",
    "brightcove",
    "component"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "devDependencies": {
    "@times-components/eslint-config-thetimes": "0.7.0",
    "@times-components/jest-configurator": "2.0.2",
    "@times-components/jest-serializer": "2.0.2",
    "@times-components/storybook": "2.0.2",
    "@times-components/test-utils": "0.2.2",
    "babel-core": "6.26.0",
    "babel-loader": "7.1.4",
    "babel-plugin-add-react-displayname": "0.0.5",
    "babel-plugin-flow-react-proptypes": "22.0.0",
    "babel-plugin-react-native-web": "0.6.1",
    "babel-plugin-styled-components": "1.5.1",
    "babel-preset-react-native": "4.0.0",
    "enzyme": "3.3.0",
    "eslint": "4.9.0",
    "jest": "21.2.1",
    "prettier": "1.8.2",
    "react": "16.4.1",
    "react-dom": "16.3.1",
    "react-native": "0.54.2",
    "react-native-web": "0.5.1",
    "react-test-renderer": "16.3.1",
    "webpack": "4.6.0",
    "webpack-cli": "2.1.4"
  },
  "dependencies": {
    "@times-components/error-view": "2.0.2",
    "@times-components/image": "3.0.2",
    "@times-components/styleguide": "2.0.2",
    "@times-components/utils": "2.0.2",
    "prop-types": "15.6.0",
    "react-native-svg": "6.3.1",
    "svgs": "3.2.1"
  },
  "peerDependencies": {
    "react": ">=16.2",
    "react-dom": ">=16.2",
    "react-native": ">=0.54",
    "react-native-web": ">=0.3"
  },
  "_timesComponentsCliVariables": {
    "component": "Video",
    "packageDescription": "Video component",
    "packageName": "video"
  },
  "publishConfig": {
    "access": "public"
  }
}
