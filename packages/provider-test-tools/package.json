{
  "name": "@times-components/provider-test-tools",
  "version": "0.1.3",
  "description": "utillity for testing apollo-client's behaviour",
  "main": "index",
  "scripts": {
    "fmt": "prettier --write '**/*.*'",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "lint": "eslint . && npm run prettier:diff",
    "test": "jest --bail --ci --coverage"
  },
  "jest": {
    "preset": "react-native",
    "rootDir": "../../",
    "testEnvironment": "jsdom",
    "coverageDirectory": "<rootDir>/packages/provider-test-tools/coverage/",
    "collectCoverageFrom": [
      "**/packages/provider-test-tools/*.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|react-apollo|@times-components)/)"
    ],
    "testMatch": [
      "<rootDir>/packages/provider-test-tools/__tests__/**.test.js"
    ],
    "moduleNameMapper": {
      "^react-apollo$": "<rootDir>/node_modules/react-apollo/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react",
    "native",
    "web",
    "graphql",
    "provider",
    "component"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "devDependencies": {
    "@times-components/eslint-config-thetimes": "0.1.3",
    "@times-components/utils": "0.3.0",
    "eslint": "4.9.0",
    "eslint-plugin-graphql": "1.5.0",
    "jest": "21.2.1",
    "prettier": "1.8.2"
  },
  "dependencies": {
    "apollo-cache-inmemory": "1.1.5",
    "apollo-client": "2.2.0",
    "apollo-link": "1.0.7",
    "graphql": "0.12.3",
    "graphql-tag": "2.6.0",
    "lodash.isequal": "4.4.0",
    "prop-types": "15.6.0",
    "react": "16.2.0",
    "react-apollo": "2.1.0-beta.0",
    "react-test-renderer": "16.2.0"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "publishConfig": {
    "access": "public"
  }
}
