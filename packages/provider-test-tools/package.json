{
  "name": "@times-components/provider-test-tools",
  "version": "0.4.0",
  "description": "utillity for testing apollo-client's behaviour",
  "main": "dist/index",
  "dev": "src/index",
  "scripts": {
    "fmt": "prettier --write '**/*.*'",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "lint": "eslint . && npm run prettier:diff",
    "test": "jest",
    "prepublishOnly": "yarn transpile",
    "cleanup-dist": "rm -rf dist",
    "transpile": "yarn cleanup-dist && babel src -d dist"
  },
  "jest": {
    "preset": "react-native",
    "rootDir": "../../",
    "testEnvironment": "jsdom",
    "coverageDirectory": "<rootDir>/packages/provider-test-tools/coverage/",
    "collectCoverageFrom": [
      "**/packages/provider-test-tools/src/*.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@times-components)/)"
    ],
    "testMatch": [
      "<rootDir>/packages/provider-test-tools/__tests__/**.test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react",
    "native",
    "web",
    "graphql",
    "provider",
    "component"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "devDependencies": {
    "@times-components/eslint-config-thetimes": "0.4.1",
    "@times-components/utils": "0.9.0",
    "babel-core": "6.26.0",
    "babel-plugin-add-react-displayname": "0.0.5",
    "babel-plugin-flow-react-proptypes": "22.0.0",
    "babel-plugin-styled-components": "1.5.1",
    "babel-preset-react-native": "4.0.0",
    "eslint": "4.9.0",
    "eslint-plugin-graphql": "1.5.0",
    "jest": "21.2.1",
    "prettier": "1.8.2"
  },
  "dependencies": {
    "@times-components/provider": "0.29.0",
    "apollo-cache-inmemory": "1.1.5",
    "apollo-client": "2.2.3",
    "apollo-link": "1.0.7",
    "apollo-utilities": "1.0.4",
    "graphql": "0.12.3",
    "graphql-tag": "2.8.0",
    "lodash.isequal": "4.4.0",
    "prop-types": "15.6.0",
    "react": "16.3.1",
    "react-apollo": "2.1.0-rc.3",
    "react-test-renderer": "16.3.1"
  },
  "peerDependencies": {
    "react": ">=16.2",
    "react-dom": ">=16.2",
    "react-native": ">=0.54",
    "react-native-web": ">=0.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
