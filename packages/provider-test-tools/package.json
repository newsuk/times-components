{
  "name": "@times-components/provider-test-tools",
  "version": "1.1.0",
  "description": "utillity for testing apollo-client's behaviour",
  "main": "dist/index",
  "dev": "src/index",
  "scripts": {
    "fmt": "eslint . --fix && prettier --write '**/*.*'",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "depcheck": "depcheck --ignores='babel-*,depcheck,**/eslint*,graphql,jest,prettier,webpack*' --ignore-bin-package=false --skip-missing",
    "lint": "eslint . && yarn prettier:diff && yarn depcheck",
    "test": "jest",
    "prepublishOnly": "yarn transpile && yarn bundle",
    "cleanup-dist": "rm -rf dist",
    "transpile": "yarn cleanup-dist && babel src -d dist",
    "bundle": "NODE_ENV=production webpack -p"
  },
  "jest": {
    "preset": "react-native",
    "rootDir": "../../",
    "testEnvironment": "jsdom",
    "coverageDirectory": "<rootDir>/packages/provider-test-tools/coverage/",
    "collectCoverageFrom": [
      "**/packages/provider-test-tools/src/*.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@times-components)/)"
    ],
    "testMatch": [
      "<rootDir>/packages/provider-test-tools/__tests__/**.test.js"
    ],
    "testURL": "http://localhost"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react",
    "native",
    "web",
    "graphql",
    "provider",
    "component"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "devDependencies": {
    "@times-components/eslint-config-thetimes": "0.7.1",
    "@times-components/webpack-configurator": "2.0.4",
    "babel-core": "6.26.0",
    "babel-loader": "7.1.4",
    "babel-plugin-add-react-displayname": "0.0.5",
    "babel-plugin-flow-react-proptypes": "22.0.0",
    "babel-plugin-react-native-web": "0.6.1",
    "babel-plugin-styled-components": "1.5.1",
    "babel-preset-react-native": "4.0.0",
    "depcheck": "0.6.9",
    "eslint": "4.9.0",
    "eslint-plugin-graphql": "2.1.1",
    "jest": "23.3.0",
    "prettier": "1.8.2",
    "webpack": "4.6.0",
    "webpack-cli": "2.1.4"
  },
  "dependencies": {
    "@times-components/provider-queries": "1.0.2",
    "@times-components/utils": "3.1.0",
    "apollo-cache-inmemory": "1.1.10",
    "apollo-client": "2.3.7",
    "apollo-link": "1.2.2",
    "apollo-utilities": "1.0.18",
    "graphql": "0.13.2",
    "graphql-tag": "2.8.0",
    "lodash.isequal": "4.4.0",
    "prop-types": "15.6.2",
    "react": "16.4.2",
    "react-apollo": "2.1.4",
    "react-test-renderer": "16.4.2",
    "zen-observable": "0.8.9"
  },
  "peerDependencies": {
    "react": ">=16.2",
    "react-dom": ">=16.2",
    "react-native": ">=0.54",
    "react-native-web": ">=0.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
