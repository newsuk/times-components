{
  "name": "@times-components/puff",
  "version": "0.0.1",
  "description": "Article puff",
  "main": "puff",
  "scripts": {
    "fmt": "prettier --write '**/*.*'",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "lint": "eslint . && npm run prettier:diff",
    "test": "yarn test:android --ci --bail --coverage && yarn test:ios -- --ci --bail --coverage && yarn test:web -- --ci --bail --coverage",
    "test:android": "jest --config='./__tests__/android/jest.config.js'",
    "test:ios": "jest --config='./__tests__/ios/jest.config.js'",
    "test:web": "jest --config='./__tests__/web/jest.config.js'",
    "test:watch": "jest --projects */**/jest.config.js --watchAll",
    "flow": "flow"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web",
    "puff",
    "component"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "devDependencies": {
    "@storybook/react-native": "3.2.18",
    "@times-components/jest-configurator": "0.0.22",
    "enzyme": "3.3.0",
    "enzyme-to-json": "3.3.0",
    "eslint": "4.9.0",
    "flow-bin": "0.63.1",
    "jest": "21.2.1",
    "prettier": "1.8.2",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-native": "0.50.1",
    "react-test-renderer": "16.2.0"
  },
  "dependencies": {
    "@times-components/article-summary": "0.15.7",
    "@times-components/card": "0.16.36",
    "@times-components/link": "0.13.14",
    "@times-components/icons": "0.1.4",
    "@times-components/responsive-styles": "0.2.14"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16",
    "react-native": ">=0.50",
    "react-native-web": ">=0.1"
  },
  "publishConfig": {
    "access": "public"
  }
