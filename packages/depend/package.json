{
  "name": "@times-components/depend",
  "version": "0.3.0",
  "description": "dependency analyzer and fixer",
  "main": "dist/depend",
  "scripts": {
    "transpile": "babel src -d dist --ignore __tests__",
    "prepublishOnly": "yarn transpile",
    "fmt": "prettier --write '**/*.*'",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "lint": "eslint . && npm run prettier:diff",
    "test": "jest --bail --ci --coverage",
    "cli": "node dist/cli.js -l ../../"
  },
  "bin": {
    "depend": "dist/cli.js"
  },
  "jest": {
    "preset": "react-native",
    "rootDir": "../../",
    "testEnvironment": "jsdom",
    "coverageDirectory": "<rootDir>/packages/depend/coverage/",
    "collectCoverageFrom": [
      "**/packages/depend/src/*.js",
      "!**/packages/depend/src/cli.js",
      "!**/packages/depend/src/get-packages.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@times-components)/)"
    ],
    "testMatch": [
      "<rootDir>/packages/depend/__tests__/**.test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "mono",
    "repo",
    "lerna",
    "dependency",
    "analyzer",
    "linter"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "devDependencies": {
    "@times-components/eslint-config-thetimes": "0.6.0",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-preset-react-native": "4.0.0",
    "eslint": "4.9.0",
    "jest": "21.2.1",
    "prettier": "1.8.2"
  },
  "dependencies": {
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-polyfill": "6.26.0",
    "babel-runtime": "6.26.0",
    "chalk": "2.3.1",
    "commander": "2.14.1",
    "fs-extra": "6.0.1",
    "glob": "7.1.2",
    "minimatch": "3.0.4",
    "semver": "5.5.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
