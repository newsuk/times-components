{
  "name": "@times-components/article-comments",
  "version": "0.5.15",
  "description": "Article Comments",
  "main": "dist/article-comments",
  "dev": "src/article-comments",
  "scripts": {
    "depcheck": "depcheck --ignores='babel-*,depcheck,eslint,jest,prettier,webpack*' --ignore-bin-package=false --skip-missing",
    "fmt": "eslint . --fix && prettier --write '**/*.*'",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "lint": "eslint . && yarn prettier:diff && yarn depcheck",
    "test:android": "jest --config='./__tests__/android/jest.config.js'",
    "test:ios": "jest --config='./__tests__/ios/jest.config.js'",
    "test:web": "jest --config='./__tests__/web/jest.config.js'",
    "test:all": "yarn test:android --coverage && yarn test:ios --coverage && yarn test:ios --coverage",
    "prepublishOnly": "yarn transpile && yarn bundle",
    "cleanup-dist": "rm -rf dist",
    "transpile": "yarn cleanup-dist && babel src -d dist",
    "bundle": "NODE_ENV=production webpack -p"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web",
    "article-comments",
    "component"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "dependencies": {
    "@times-components/button": "2.3.71",
    "@times-components/context": "1.0.7",
    "@times-components/link": "3.4.7",
    "@times-components/styleguide": "3.28.14",
    "prop-types": "15.7.2",
    "styled-components": "3.4.0"
  },
  "devDependencies": {
    "@times-components/eslint-config-thetimes": "0.8.11",
    "@times-components/jest-configurator": "2.5.8",
    "@times-components/jest-serializer": "3.2.4",
    "@times-components/storybook": "4.0.5",
    "@times-components/webpack-configurator": "2.0.19",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "24.8.0",
    "babel-plugin-styled-components": "1.10.0",
    "eslint": "5.9.0",
    "jest": "24.8.0",
    "jest-styled-components": "6.3.1",
    "prettier": "1.14.3",
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "react-native": "0.59.8",
    "react-test-renderer": "16.8.3",
    "webpack": "4.30.0",
    "webpack-cli": "3.3.1"
  },
  "peerDependencies": {
    "react": ">=16.5",
    "react-dom": ">=16.5",
    "react-native": ">=0.55",
    "react-native-web": "0.11.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
