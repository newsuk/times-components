    "@times-components/utils": "1.1.0",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-loader": "7.1.4",
    "babel-plugin-react-native-web": "0.6.1",
    "babel-preset-react-native": "4.0.0",
    "eslint": "4.9.0",
    "jest": "21.2.1",
    "jest-styled-components": "5.0.0",
    "mockdate": "2.0.2",
    "prettier": "1.8.2",
    "react": "16.3.1",
