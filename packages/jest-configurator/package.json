{
  "name": "@times-components/jest-configurator",
  "version": "2.1.0",
  "description": "Cross platform Jest Config",
  "main": "lib/jest-configurator.js",
  "dev": "src/jest-configurator.js",
  "scripts": {
    "prepublishOnly": "yarn transpile",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "fmt": "eslint . --fix && prettier --write '**/*.*'",
    "depcheck": "depcheck --ignores='babel-*,depcheck,eslint,flow-bin,identity-obj-proxy,jest*,prettier' --ignore-bin-package=false --skip-missing",
    "lint": "flow check && eslint . && yarn prettier:diff && yarn depcheck",
    "pretest": "./setup.sh",
    "test": "jest",
    "cleanup-dist": "rm -rf dist",
    "transpile": "yarn cleanup-dist && babel src --ignore node_modules,__tests__ -d lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web",
    "link",
    "component",
    "jest",
    "eslint"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "preset": "react-native",
    "rootDir": "../../",
    "collectCoverageFrom": [
      "**/jest-configurator/src/**"
    ],
    "coverageDirectory": "<rootDir>/packages/jest-configurator/coverage",
    "coveragePathIgnorePatterns": [
      "react-native-mock-components.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@times-components)/)"
    ],
    "testMatch": [
      "<rootDir>/packages/jest-configurator/__tests__/*.test.js"
    ]
  },
  "dependencies": {
    "@times-components/test-utils": "0.3.0",
    "babel-core": "6.26.0",
    "babel-jest": "23.4.0",
    "babel-plugin-istanbul": "5.0.1",
    "babel-preset-jest": "23.2.0",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.0",
    "find-node-modules": "1.0.4",
    "identity-obj-proxy": "3.0.0",
    "jest": "23.3.0",
    "jest-plugin-context": "2.6.0",
    "jest-plugins": "2.9.0"
  },
  "devDependencies": {
    "@times-components/eslint-config-thetimes": "0.7.0",
    "babel-cli": "6.26.0",
    "babel-plugin-add-react-displayname": "0.0.5",
    "babel-plugin-flow-react-proptypes": "22.0.0",
    "babel-plugin-styled-components": "1.5.1",
    "babel-preset-react-native": "4.0.0",
    "depcheck": "0.6.9",
    "eslint": "4.9.0",
    "flow-bin": "0.63.1",
    "prettier": "1.8.2"
  },
  "peerDependencies": {
    "react": ">=16.2",
    "react-dom": ">=16.2",
    "react-native": ">=0.54",
    "react-native-web": ">=0.3"
  },
  "resolutions": {
    "minimatch": "3.0.4"
  }
}
