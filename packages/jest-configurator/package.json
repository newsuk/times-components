{
  "name": "@times-components/jest-configurator",
  "version": "0.0.15",
  "description": "Cross platform Jest Config",
  "main": "lib/jest-configurator.js",
  "scripts": {
    "prepublishOnly": "babel src -d lib",
    "test:watch": "jest --bail --verbose --watchAll",
    "test": "jest --bail --ci --coverage",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "fmt": "prettier --write '**/*.*'",
    "lint": "flow && eslint . && yarn prettier:diff"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web",
    "link",
    "component",
    "jest",
    "eslint"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "preset": "react-native",
    "rootDir": "../../",
    "transformIgnorePatterns": [
      "node_modules/(?!@times-components)/"
    ],
    "testMatch": [
      "<rootDir>/packages/jest-configurator/__tests__/*.test.js"
    ]
  },
  "dependencies": {
    "enzyme": "3.2.0",
    "enzyme-adapter-react-16": "1.1.0",
    "recursive-readdir-synchronous": "0.0.3"
  },
  "devDependencies": {
    "@times-components/eslint-config-thetimes": "0.1.0",
    "babel-cli": "6.26.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-flow": "6.23.0",
    "eslint": "4.9.0",
    "flow-bin": "0.63.1",
    "jest": "21.2.1",
    "prettier": "1.8.2"
  }
}
