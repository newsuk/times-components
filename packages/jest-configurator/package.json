{
  "name": "@times-components/jest-configurator",
  "version": "0.0.1",
  "description": "Cross platform Jest Config",
  "main": "jest-configurator.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll --coverage",
    "fmt": "prettier --write '**/*.+(js|json|md)' '!**/CHANGELOG.md'",
    "prettier:diff":
      "prettier --list-different '**/*.+(js|json|md)' '!**/CHANGELOG.md'",
    "lint": "eslint . && npm run prettier:diff"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web",
    "link",
    "component",
    "jest",
    "eslint"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": ["airbnb", "prettier", "prettier/react"],
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [".js"]
        }
      ],
      "import/extensions": "off"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js", ".android.js", ".ios.js", ".web.js"]
        }
      }
    },
    "root": true,
    "env": {
      "jest": true
    }
  },
  "eslintIgnore": ["**/node_modules/*", "**/coverage/*", "dist"],
  "jest": {
    "preset": "react-native",
    "rootDir": "../../",
    "transformIgnorePatterns": ["node_modules/(?!@times-components)/"],
    "testMatch": ["<rootDir>/packages/utilities/**/__tests__/*.js"]
  },
  "devDependencies": {
    "eslint": "4.9.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jest": "21.3.2",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-react": "7.4.0",
    "jest": "21.2.1",
    "prettier": "1.8.2"
  }
}
