{
  "name": "@times-components/brightcove-video",
  "version": "1.11.5",
  "main": "brightcove-video",
  "scripts": {
    "fmt": "prettier --write '**/*.*'",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "lint": "eslint . && yarn prettier:diff",
    "test": "jest",
    "dextrose-stories": "dextrose generate-stories $(pwd)",
    "dextrose-clean": "dextrose clean-stories $(pwd)"
  },
  "jest": {
    "preset": "react-native",
    "rootDir": "../../",
    "coverageDirectory": "<rootDir>/packages/brightcove-video/coverage/",
    "testEnvironment": "jsdom",
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@times-components)/)"
    ],
    "testMatch": [
      "<rootDir>/packages/brightcove-video/__tests__/*.test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web",
    "video",
    "brightcove",
    "component"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "devDependencies": {
    "@storybook/addon-actions": "3.3.15",
    "@storybook/addons": "3.3.15",
    "@storybook/react-native": "3.3.15",
    "@times-components/eslint-config-thetimes": "0.1.4",
    "dextrose": "1.6.0",
    "eslint": "4.9.0",
    "jest": "21.2.1",
    "prettier": "1.8.2",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-native": "0.53.3",
    "react-native-web": "0.3.2",
    "react-test-renderer": "16.2.0"
  },
  "dependencies": {
    "@times-components/styleguide": "0.4.4",
    "prop-types": "15.6.0",
    "react-native-svg": "5.5.1",
    "svgs": "3.2.1"
  },
  "peerDependencies": {
    "babel-preset-env": "1.6.1",
    "babel-preset-stage-2": "6.24.1",
    "react": ">=16",
    "react-dom": ">=16",
    "react-native": ">=0.50",
    "react-native-web": ">=0.3"
  },
  "_timesComponentsCliVariables": {
    "component": "BrightcoveVideo",
    "packageDescription": "Brightcove component",
    "packageName": "brightcove-video"
  },
  "publishConfig": {
    "access": "public"
  }
}
