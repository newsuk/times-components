{
  "name": "@times-components/brightcove-video",
  "version": "3.0.12",
  "main": "dist/index",
  "dev": "src/index",
  "scripts": {
    "fmt": "eslint . --fix && prettier --write '**/*.*'",
    "prettier:diff": "prettier --list-different '**/*.*'",
    "lint": "eslint . && yarn prettier:diff",
    "_test": "jest",
    "prepublishOnly": "yarn transpile && yarn bundle",
    "cleanup-dist": "rm -rf dist",
    "transpile": "yarn cleanup-dist && babel src -d dist",
    "bundle": "NODE_ENV=production webpack -p"
  },
  "jest": {
    "preset": "react-native",
    "rootDir": "../..",
    "coverageDirectory": "<rootDir>/packages/brightcove-video/coverage/",
    "testEnvironment": "jsdom",
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@times-components)/)"
    ],
    "testMatch": [
      "<rootDir>/packages/brightcove-video/__tests__/*.test.js"
    ],
    "testURL": "http://localhost"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsuk/times-components.git"
  },
  "keywords": [
    "react-native-web",
    "react",
    "native",
    "web",
    "video",
    "brightcove",
    "component"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/newsuk/times-components/issues"
  },
  "homepage": "https://github.com/newsuk/times-components#readme",
  "devDependencies": {
    "@times-components/eslint-config-thetimes": "0.7.0",
    "@times-components/storybook": "2.1.0",
    "@times-components/webpack-configurator": "2.0.1",
    "babel-core": "6.26.0",
    "babel-loader": "7.1.4",
    "babel-plugin-add-react-displayname": "0.0.5",
    "babel-plugin-flow-react-proptypes": "22.0.0",
    "babel-plugin-react-native-web": "0.6.1",
    "babel-plugin-styled-components": "1.5.1",
    "babel-preset-react-native": "4.0.0",
    "eslint": "4.9.0",
    "jest": "23.3.0",
    "prettier": "1.8.2",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "react-native": "0.55.4",
    "react-native-web": "0.5.1",
    "react-test-renderer": "16.4.2",
    "webpack": "4.6.0",
    "webpack-cli": "2.1.4"
  },
  "dependencies": {
    "@times-components/styleguide": "2.1.8",
    "@times-components/utils": "2.1.6",
    "prop-types": "15.6.2",
    "svgs": "3.2.1"
  },
  "peerDependencies": {
    "react": ">=16.2",
    "react-dom": ">=16.2",
    "react-native": ">=0.54",
    "react-native-web": ">=0.3"
  },
  "_timesComponentsCliVariables": {
    "component": "BrightcoveVideo",
    "packageDescription": "Brightcove component",
    "packageName": "brightcove-video"
  },
  "publishConfig": {
    "access": "public"
  }
}
